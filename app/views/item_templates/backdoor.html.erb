<h1> Add a new item </h1>

<form action = "/insert_item" method= "post">
<div>
<label for= "link_url">Link URL</label>
<input id= "link_url" type= "text" placeholder= "Enter a URL..." name= "link_url">
</div>
<div>
<label for= "link_description">Link Description</label>
<input id= "link_description" type= "text" placeholder= "Enter a link description..." name= "link_description">
</div>
<div>
<label for= "thumbnail">Thumbnail URL</label>
<input id= "thumbnail" type= "text" placeholder= "Enter a thumbnail URL..." name= "thumbnail">
</div>
<button>Create item</button>
</div>
</form>

<hr>

<div class="links-row">
    <% @list_of_items.each do |the_item| %>
      <div class="item">
        <img src="<%= the_item.thumbnail_url %>" class="thumbnail">

        <a class="link-text" target="_blank" href="<%= the_item.link_url %>">
          <%= the_item.link_description %>
        </a>
      </div>
    <% end %>
</div>
  
